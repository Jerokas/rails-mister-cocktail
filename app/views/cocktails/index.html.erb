<h1>Cocktails</h1>

<p><%= link_to "New", new_cocktail_path %></p>

<div class="container">
  <div class="row">

    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-3">
        <%= link_to(cocktail_path(cocktail)) do %>
          <%= render "card", c: cocktail %>
        <% end %>
      </div>
    <% end %>

  </div>
</div>

